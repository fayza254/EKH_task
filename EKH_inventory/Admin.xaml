<Window x:Class="EKH_inventory.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EKH_inventory"
        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800">

    <Grid Background="AliceBlue" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Update Quantity Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Label Content="Select Product:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox x:Name="updateComboBox" Width="200" Height="30" Margin="10,0" 
                      DisplayMemberPath="Pname" SelectedValuePath="PID"/>

            <Label Content="New Quantity:" VerticalAlignment="Center" FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBox x:Name="quantityTextBox" Width="80" Height="25" Margin="10,0"/>

            <Button x:Name="updateButton" Content="Update Quantity" Width="120" Height="30" 
                    Background="Green" Foreground="White" FontWeight="Bold"
                    Click="UpdateButton_Click" Margin="20,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Background="White" Margin="10" Name="data" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProductID" Width="70" Binding="{Binding PID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product name" Width="90" Binding="{Binding Pname}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product description" Width="120" Binding="{Binding Pdescription}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product Quantity" Width="100" Binding="{Binding Pquantity}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product Price" Width= "80" Binding="{Binding Price}"></DataGridTextColumn>
                <DataGridTextColumn Header="SupplierID" Width= "70" Binding="{Binding SID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Supplier Name" Width= "90" Binding="{Binding Sname}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Row="2" Background="White" Margin="10" Name="data2" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProductID" Width="70" Binding="{Binding PID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product name" Width="90" Binding="{Binding Pname}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product description" Width="120" Binding="{Binding Pdescription}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product Quantity" Width="100" Binding="{Binding Pquantity}"></DataGridTextColumn>
                <DataGridTextColumn Header="Product Price" Width= "80" Binding="{Binding Price}"></DataGridTextColumn>
                <DataGridTextColumn Header="SupplierID" Width= "70" Binding="{Binding SID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Supplier Name" Width= "90" Binding="{Binding Sname}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>