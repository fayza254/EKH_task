<Window x:Class="EKH_inventory.Stock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EKH_inventory"
        mc:Ignorable="d"
        Title="Stock" Height="700" Width="1000">
    <Grid Background="AliceBlue" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ship Out Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Label Content="Select Product:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox x:Name="productsComboBox" Width="200" Height="30" Margin="10,0" 
                      DisplayMemberPath="Pname" SelectedValuePath="PID"/>
            <Label Content="Quantity to Ship:" VerticalAlignment="Center" FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBox x:Name="quantityTextBox" Width="80" Height="25" Margin="10,0"/>
            <Button x:Name="shipOutButton" Content="Ship Out" Width="80" Height="30" 
                    Background="#FFDDDDDD" Click="ShipOutButton_Click" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Product Management Section -->
        <GroupBox Grid.Row="1" Header="Product Management" Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Product Input Fields -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel Margin="5">
                        <Label Content="Name:" FontWeight="Bold"/>
                        <TextBox x:Name="productNameTxt" Width="120" Height="25"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Description:" FontWeight="Bold"/>
                        <TextBox x:Name="productDescTxt" Width="150" Height="25"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Quantity:" FontWeight="Bold"/>
                        <TextBox x:Name="productQtyTxt" Width="80" Height="25"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Price:" FontWeight="Bold"/>
                        <TextBox x:Name="productPriceTxt" Width="80" Height="25"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Supplier:" FontWeight="Bold"/>
                        <ComboBox x:Name="productSupplierCmb" Width="120" Height="25"
                                  DisplayMemberPath="Sname" SelectedValuePath="SID"/>
                    </StackPanel>
                </StackPanel>

                <!-- Product Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button x:Name="addProductBtn" Content="Add Product" Width="100" Height="30" 
                            Background="#FFDDDDDD" Click="AddProductBtn_Click" Margin="5"/>
                    <Button x:Name="updateProductBtn" Content="Update Product" Width="100" Height="30" 
                            Background="#FFDDDDDD" Click="UpdateProductBtn_Click" Margin="5"/>
                    <Button x:Name="deleteProductBtn" Content="Delete Product" Width="100" Height="30" 
                            Background="#FFDDDDDD" Click="DeleteProductBtn_Click" Margin="5"/>
                    <Button x:Name="clearProductBtn" Content="Clear" Width="80" Height="30" 
                            Background="#FFDDDDDD" Click="ClearProductBtn_Click" Margin="5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Products DataGrid -->
        <DataGrid Grid.Row="2" x:Name="productsDataGrid" 
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True"
                  SelectionChanged="ProductsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding PID}"/>
                <DataGridTextColumn Header="Product Name" Width="100" Binding="{Binding Pname}"/>
                <DataGridTextColumn Header="Description" Width="120" Binding="{Binding Pdescription}"/>
                <DataGridTextColumn Header="Quantity" Width="70" Binding="{Binding Pquantity}"/>
                <DataGridTextColumn Header="Price" Width="70" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Supplier" Width="100" Binding="{Binding Sname}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Supplier Management Section -->
        <GroupBox Grid.Row="3" Header="Supplier Management" Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Supplier Input Fields -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel Margin="5">
                        <Label Content="Name:" FontWeight="Bold"/>
                        <TextBox x:Name="supplierNameTxt" Width="120" Height="25"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Phone:" FontWeight="Bold"/>
                        <TextBox x:Name="supplierPhoneTxt" Width="100" Height="25"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Email:" FontWeight="Bold"/>
                        <TextBox x:Name="supplierEmailTxt" Width="150" Height="25"/>
                    </StackPanel>
                </StackPanel>

                <!-- Supplier Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button x:Name="addSupplierBtn" Content="Add Supplier" Width="100" Height="30" 
                            Background="#FFDDDDDD" Click="AddSupplierBtn_Click" Margin="5"/>
                    <Button x:Name="updateSupplierBtn" Content="Update Supplier" Width="100" Height="30" 
                            Background="#FFDDDDDD" Click="UpdateSupplierBtn_Click" Margin="5"/>
                    <Button x:Name="deleteSupplierBtn" Content="Delete Supplier" Width="100" Height="30" 
                            Background="#FFDDDDDD" Click="DeleteSupplierBtn_Click" Margin="5"/>
                    <Button x:Name="clearSupplierBtn" Content="Clear" Width="80" Height="30" 
                            Background="#FFDDDDDD" Click="ClearSupplierBtn_Click" Margin="5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Suppliers DataGrid -->
        <DataGrid Grid.Row="4" x:Name="suppliersDataGrid" 
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True"
                  SelectionChanged="SuppliersDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding SID}"/>
                <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Sname}"/>
                <DataGridTextColumn Header="Phone" Width="100" Binding="{Binding Sphone}"/>
                <DataGridTextColumn Header="Email" Width="150" Binding="{Binding Semail}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>